{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",

        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,

        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "baseUrl": "./src",
        "paths": {
            "@configs/*": ["configs/*"],
            "@controllers/*": ["controllers/*"],
            "@middlewares/*": ["middlewares/*"],
            "@models/*": ["models/*"],
            "@routes/*": ["routes/*"],
            "@services/*": ["services/*"]
        }
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
